# - Config file for the Local_EACSF package
# It defines the following variables
#  Local_EACSF_INCLUDE_DIRS - include directories
#  Local_EACSF_LIBRARIES    - libraries generated by Local_EACSF
#  Local_EACSF_EXECUTABLES   - the Local_EACSF executable
 
# Compute paths

get_filename_component(Local_EACSF_CMAKE_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)

file(TO_CMAKE_PATH "${Local_EACSF_CMAKE_DIR}/../../../include" Local_EACSF_INCLUDE_DIRS)
file(TO_CMAKE_PATH "${Local_EACSF_CMAKE_DIR}/../../" Local_EACSF_LIBRARY_DIRS)

link_directories(${Local_EACSF_LIBRARY_DIRS})

set(Local_EACSF_LIBRARIES Local_EACSFLib)

find_program(Local_EACSF_EXECUTABLE
  NAMES Local_EACSF
  PATHS
    "${Local_EACSF_CMAKE_DIR}/../../../bin"    
  NO_DEFAULT_PATH
  )

message(STATUS "\t Local_EACSF_EXECUTABLE=" ${Local_EACSF_EXECUTABLE})
message(STATUS "\t Local_EACSF_INCLUDE_DIRS=" ${Local_EACSF_INCLUDE_DIRS})
message(STATUS "\t Local_EACSF_LIBRARIES=" ${Local_EACSF_LIBRARIES})
message(STATUS "\t Local_EACSF_LIBRARY_DIRS=" ${Local_EACSF_LIBRARY_DIRS})
